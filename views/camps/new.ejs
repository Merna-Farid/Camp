<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">NEW CAMP</h1>
    
<div class="col-md-6 offset-md-3">
    <form action="/camps" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">
                Title:
            </label>
            <input type="text" id="title" name="title" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">
                Location:
            </label>
            <input type="text" id="locations" name="location" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">
                Description:
            </label>
            <textarea id="description" name="description" class="form-control" required></textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price:</label>
            <div class="input-group" >
                <span class="input-group-text" id="basic-addon1">$</span>
                <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1"name="price" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
              </div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    <a href="/camps">ALL CAMPS</a>
</div>

</div>

